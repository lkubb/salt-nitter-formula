# -*- coding: utf-8 -*-
# vim: ft=yaml
# yamllint disable rule:comments-indentation
---
nitter:
  install:
      # Install rootless containers running as dedicated user.
    rootless: true
      # When applying `clean` states, also remove application data.
      # Setting this to true might incur accidental data loss!
    remove_all_data_for_sure: false
  config:
    cache:
        # how long to cache list info (not the tweets, so keep it high)
      listMinutes: 240
      redisConnections: 20
      redisHost: nitter-redis
        # max, new connections are opened when none are available, but if the pool size
        # goes above this, they're closed when released. don't worry about this unless
        # you receive tons of requests per second
      redisMaxConnections: 30
      redisPassword: ''
      redisPort: 6379
        # how long to cache rss queries
      rssMinutes: 10
    config:
        # use base64 encoding for proxied media urls
      base64Media: false
        # enable request logs and debug endpoints
      enableDebug: false
        # set this to false to disable RSS feeds
      enableRSS: true
        # random key for cryptographic signing of video urls
        # Will be autogenerated if unset.
      hmacKey: null
        # http/https url, SOCKS proxies are not supported
      proxy: ''
      proxyAuth: ''
        # minimum amount of usable tokens. tokens are used to authorize API requests,
        # but they expire after ~1 hour, and have a limit of 187 requests.
        # the limit gets reset every 15 minutes, and the pool is filled up so there's
        # always at least $tokenCount usable tokens. again, only increase this if
        # you receive major bursts all the time
      tokenCount: 10
      # Change default preferences here, see src/prefs_impl.nim for a complete list
    preferences:
      autoplayGifs: true
        # Support bidirectional text (makes clicking on tweets harder)
      bidiSupport: false
        # Hide profile banner
      hideBanner: false
        # Hide pinned tweets
      hidePins: false
        # Hide tweet replies
      hideReplies: false
        # Hide tweet stats (replies, retweets, likes)
      hideTweetStats: false
        # Enable hls video streaming (requires JavaScript)
      hlsPlayback: false
        # Infinite scrolling (experimental, requires JavaScript)
      infiniteScroll: false
        # Enable mp4 video playback (only for gifs)
      mp4playback: true
        # Mute videos by default
      muteVideos: false
        # Proxy video streaming through the server (might be slow)
      proxyVideos: true
        # Instagram -> Bibliogram
      replaceInstagram: bibliogram.art
        # Reddit -> Teddit/Libreddit
      replaceReddit: teddit.net
        # Twitter -> Nitter
      replaceTwitter: nitter.net
        # YouTube -> Piped/Invidious
      replaceYouTube: piped.kavin.rocks
        # Square profile pictures
      squareAvatars: false
        # Make profile sidebar stick to top
      stickyProfile: true
      theme: Nitter
    server:
      address: 0.0.0.0
      hostname: localhost
      httpMaxConnections: 100
        # disable to enable cookies when not using https
      https: false
      port: 1773
      staticDir: ./public
      title: nitter

  lookup:
    rootgroup: root
    compose:
      create_pod: null
      pod_args: null
      project_name: nitter
      remove_orphans: true
      service:
        container_prefix: null
        ephemeral: true
        pod_prefix: null
        restart_policy: on-failure
        restart_sec: 2
        separator: null
        stop_timeout: null
    paths:
      base: /opt/containers/nitter
      compose: docker-compose.yml
      config_nitter: nitter.env
      config_redis: redis.env
      config: nitter.conf
    user:
      groups: []
      home: null
      name: nitter
      shell: /usr/sbin/nologin
      uid: null
      gid: null
    containers:
      nitter:
        image: docker.io/zedeus/nitter:latest
      redis:
        image: docker.io/library/redis:6-alpine

  tofs:
      # The files_switch key serves as a selector for alternative
      # directories under the formula files directory. See TOFS pattern
      # doc for more info.
      # Note: Any value not evaluated by `config.get` will be used literally.
      # This can be used to set custom paths, as many levels deep as required.
    files_switch:
      - any/path/can/be/used/here
      - id
      - roles
      - osfinger
      - os
      - os_family

      # All aspects of path/file resolution are customisable using the options below.
      # This is unnecessary in most cases; there are sensible defaults.
      # Default path: salt://< path_prefix >/< dirs.files >/< dirs.default >
      # I.e.: salt://nitter/files/default
      # path_prefix: template_alt
      # dirs:
      #   files: files_alt
      #   default: default_alt
      # The entries under `source_files` are prepended to the default source files
      # given for the state
    source_files:
      Nitter compose file is managed:
        - docker-compose_alt.yml
        - docker-compose_alt.yml.j2
      nitter environment file is managed:
        - nitter_alt.env
        - nitter_alt.env.j2
      redis environment file is managed:
        - redis_alt.env
        - redis_alt.env.j2
